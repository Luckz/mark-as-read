{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "root": true,
    "rules": {
        "eqeqeq": "warn",
        "indent": [
            "warn",
            "tab",
            {
                "ignoreComments": true,
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "no-alert": "warn",
        "no-console": "off"
    }
}